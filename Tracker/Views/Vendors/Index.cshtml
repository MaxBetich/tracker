@{
  Layout = "_Layout";
}

@using Tracker.Models;
<div id="showDiv">
<h1>Vendor List</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors currently being tracked</h3>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href="/vendors/@vendor.Id">@vendor.Name</a></h3>
  <p>@vendor.Description</p>
}

<p><a href="/">Return</a></p>
</div>